{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@robot-analytics/components*": ["app/components/*"],
      "@robot-analytics/data*": ["app/data/*"],
      "@robot-analytics/routes*": ["app/routes/*"],
      "@robot-analytics/state*": ["app/state/*"],
      "@robot-analytics/*": ["app/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
